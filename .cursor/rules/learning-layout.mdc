/* General Styles */
:root {
    --primary-color: #007BFF;
    --accent-color: #0056b3;
    --dark-text-color: #111;
}

/* Sidebar */
#sidebar {
    width: 20%;
    background: white;
    border-right: 2px solid var(--primary-color);
}

/* Active Tab */
#sidebar button.active {
    font-weight: bold;
    text-decoration: underline;
    text-decoration-thickness: 3px;
    color: var(--primary-color);
}

/* Chat UI */
.chat-container {
    display: none;
    flex-direction: column;
}
.section.chat-active .chat-container {
    display: flex;
}

/* Message Bubbles */
.message {
    padding: 10px;
    border-radius: 12px;
    max-width: 70%;
}
.message.assistant {
    background: var(--primary-color);
    color: white;
    align-self: flex-start;
}
.message.user {
    background: var(--accent-color);
    color: white;
    align-self: flex-end;
}

/* Input Bar - Only visible in chat */
.input-area {
    display: flex;
    padding: 10px;
    background: white;
    border-top: 1px solid #ddd;
}
.input-area input {
    flex-grow: 1;
    padding: 10px;
    border-radius: 8px;
}
.send-button {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--primary-color);
    font-size: 24px;
}
